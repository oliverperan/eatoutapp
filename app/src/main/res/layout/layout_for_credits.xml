<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    >
<android.support.constraint.Guideline
    android:id="@+id/guidelineAtt"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="@dimen/separation_guide_line"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imAttribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/guidelineAtt"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/icon_attribution"
        />

    <TextView
        android:id="@+id/tvAttribution"
        android:singleLine="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guidelineAtt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imAttribution"
        app:layout_constraintBottom_toBottomOf="@id/imAttribution"
        android:layout_marginEnd="@dimen/margin_small"
        tools:text="aaaaarrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrOOOOOOsssAAAAABBbbbccccccccccccccccccccddddddddddddddddddeeeeeeeeeeeeeeeeee"
        />
</android.support.constraint.ConstraintLayout>